<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/abu_abu"
        android:layout_height="match_parent">

    <RelativeLayout
            android:background="@color/abu_abu"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<include-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:id="@+id/Toolbar"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--layout="@layout/toolbardua" />-->



        <ImageView
                android:id="@+id/gambarpotensi"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

        <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:clipToPadding="true"
                android:layout_marginTop="165dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="600dp">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/potensi"
                        android:layout_below="@+id/tanggal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/hitam"
                        android:textSize="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/button"
                        android:layout_below="@+id/potensi"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="POTENSI NAGARI"
                        android:textSize="11dp"
                        android:textColor="@color/white"
                        android:background="@color/primary2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"/>

                <RelativeLayout
                        android:id="@+id/id"
                        android:layout_below="@+id/button"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="KORONG : "
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"
                            android:textColor="@color/hitam2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/korong"
                            android:text="korong"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </RelativeLayout>



                <TextView
                        android:id="@+id/keterangan"
                        android:layout_below="@+id/id"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/hitam2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>






    </RelativeLayout>

</ScrollView>