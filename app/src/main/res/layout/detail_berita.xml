<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

    <RelativeLayout
            android:background="@color/abu_abu"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<include-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:id="@+id/Toolbar"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="match_parent"-->
                <!--layout="@layout/toolbardua" />-->


            <ImageView
                    android:id="@+id/gambarberita"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

        <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:clipToPadding="true"
                android:layout_marginTop="165dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/judul"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/hitam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/kategori"
                        android:layout_below="@+id/judul"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:background="@color/primary2"
                        android:layout_width="100dp"
                        android:layout_height="30dp"/>

                <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:id="@+id/linier"
                        android:layout_below="@+id/kategori"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:src="@drawable/jamdua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tanggal"
                            android:textSize="12dp"
                            android:layout_below="@+id/kategori"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/hitam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>



                <TextView
                        android:id="@+id/isi"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@+id/linier"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:textColor="@color/hitam2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>


</RelativeLayout>

</ScrollView>