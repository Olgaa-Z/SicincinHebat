<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/walpaperenam"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.ui.Detailaduan">

    <!--<ImageView-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/splash"-->
            <!--android:layout_width="50dp" -->
            <!--android:layout_height="55dp"/>-->

    <TextView
        android:text="PENGADUAN NAGARI"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
            android:text="Laporkan keluhan atau yang lain kepada kami pemerintah Nagari Sicincin"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="160dp"
            android:id="@+id/holder"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/keluhan"
                android:hint="Masukkan aduan anda disini....."
                android:textColor="@color/hitam"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



    </android.support.v7.widget.CardView>




    <Button
            android:id="@+id/buttonaduan"
            android:text="KIRIM ADUAN"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/primary2"
            android:layout_below="@+id/kontak2"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

</LinearLayout>